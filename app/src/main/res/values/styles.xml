<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchBox" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:drawablePadding">@dimen/_7sdp</item>
        <item name="android:textColor">@color/font_dark_blue_gray</item>
        <item name="android:textColorHint">@color/font_blue_gray</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">textVisiblePassword</item>

    </style>

</resources>
